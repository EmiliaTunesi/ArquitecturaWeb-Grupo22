<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="Arqui" transaction-type="RESOURCE_LOCAL">
        <class>Entitys.Carrera</class>
        <class>Entitys.Estudiante</class>
        <class>Entitys.EstudianteCarrera_pk</class>
        <class>Entitys.EstudianteCarrera</class>

        <properties>
            <!-- Cambiá aquí los parámetros de conexión -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/TPE2db?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/><!--name -->
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <!-- Para que JPA genere/actualice tablas en desarrollo -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
